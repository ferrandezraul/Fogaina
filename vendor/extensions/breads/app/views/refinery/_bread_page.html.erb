
<div class='row'>

  <div class='small-4 column'>
    <section id='side_body'>
      <div class="inner">  
        <aside>
          <h2><%= @page.title %></h2>
          <ul id="breads">
            <% @breads.each do |bread| %>
              <% if bread.name %>
                <li>
                  <%= link_to bread.name, refinery.breads_bread_path(bread) %>
                </li>
              <% end %>
            <% end %>
          </ul>
        </aside>
      </div>
    </section>
  </div>

  <div class='small-8 column'>
    <section id='body'>
      <h2>
        <%= @bread.name %>
      </h2>

      <section>
        <p>
          <%=raw @bread.description %>
        </p>
      </section>

        <div class='row'>
          <% if @bread.price %>
            <div class='small-6 column'>
              <section>
                <p>
                  <strong>
                    <%= I18n.t(".refinery.plugins.breads.price") + ":" %>
                    <%=raw sprintf("%.2f", @bread.price ) + " â‚¬"%>
                  </strong>
                </p>
              </section>
            </div>
          <% end %>
          <% if @bread.available_days and !@bread.available_days.empty? %>      
            <div class='small-6 column'>
              <section>
                <p>
                  <strong>
                    <%= I18n.t(".refinery.plugins.breads.available_days") + ":" %>
                    <%=raw I18n.t( ".refinery.plugins.breads." + @bread.available_days.to_s ) %>
                  </strong>
                </p>
              </section>
            </div>
          <% end %>  
        </div>

      <section>
        <ul class="clearing-thumbs" data-clearing>
          <li><%= link_to( image_tag(@bread.photo.url, :data => { 
            :caption => @bread.name }, :class => "th"), @bread.photo.url ) if @bread.photo %></li>
        </ul>
      </section>
    </section>
  </div>
</div>

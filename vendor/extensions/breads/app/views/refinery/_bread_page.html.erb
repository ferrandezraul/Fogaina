
<div class='row'>

  <div class='small-4 column'>
    <section id='side_body'>
      <div class="inner">  
        <aside>
          <h2><%= @page.title %></h2>
          <ul id="breads">
            <% @breads.each do |bread| %>
              <% if bread.name %>
                <li>
                  <%= link_to bread.name, refinery.breads_bread_path(bread) %>
                </li>
              <% end %>
            <% end %>
          </ul>
        </aside>
      </div>
    </section>
  </div>

  <div class='small-8 column'>
    <section id='body'>
      <h2>
        <%= @bread.name %>
      </h2>

      <section>
        <p>
          <%=raw @bread.description %>
        </p>
      </section>

        <div class='row'>
          <% if @bread.price %>
            <div class='small-4 column'>
              <section>
                <p>
                  <strong>
                    <%= I18n.t(".refinery.plugins.breads.price") + ":" %>
                    <%=raw sprintf("%.2f", @bread.price ) + " â‚¬"%>
                  </strong>
                </p>
              </section>
            </div>
          <% end %>
          <% if @bread.available_days and !@bread.available_days.empty? and !@bread.available_days.include?( 'no_mostrar' )%>      
            <div class='small-8 column'>
              <section>
                <p>
                  <% available_days_string = "" %>
                  <strong>
                    <%= I18n.t(".refinery.plugins.breads.available_days") + ":" %>
                    <%-# @bread.available_days es un string con forma de Array -%>
                    <%-# i.e "[:monday, :tuesday]" -%>
                    <%-# por eso aqui lo convierto de nuevo a un Array -%>
                    <% available_days_array = @bread.available_days.gsub(/\[|\]/, '').split(", ") %>
                    <%-# e itero los elementos para despues encontrar sus traducciones -%>
                    <% available_days_array.each_with_index do |day, index| %>
                      <%-# quitamos los ':' y los "" para poder encontrar la traduccion -%>
                      <% clean_day = I18n.t( day.gsub(/:/, '').gsub(/"/, '') ) %>
                      <% if index == 0 %>
                        <% available_days_string = available_days_string + clean_day %>
                      <% elsif ( index == ( available_days_array.length - 1 ) ) %>
                        <% available_days_string = available_days_string + I18n.t( 'and' ) + clean_day %>
                      <% else %>
                        <% available_days_string = available_days_string + ", " + clean_day %>
                      <% end %>

                    <% end %>
                    
                  </strong>
                  <%=raw available_days_string %>
                </p>
              </section>
            </div>
          <% end %>  
        </div>

      <section>
        <ul class="clearing-thumbs" data-clearing>
          <li><%= link_to( image_tag(@bread.photo.url, :data => { 
            :caption => @bread.name }, :class => "th"), @bread.photo.url ) if @bread.photo %></li>
        </ul>
      </section>
    </section>
  </div>
</div>

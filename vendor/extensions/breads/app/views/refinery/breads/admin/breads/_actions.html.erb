<ul>
  <% if ::Refinery::Breads::Admin::BreadsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.breads_admin_breads_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_breads_admin_bread_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Breads::Admin::BreadsController.sortable? && ::Refinery::Breads::Bread.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.breads_admin_breads_path,
                     t('.reorder', what:  "Breads"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.breads_admin_breads_path,
                      t('.reorder_done', what: "Breads"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>

<%= form_for [refinery, :breads_admin, @bread] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @bread,
              :include_object_name => true %>

  <%= render '/refinery/admin/locale_picker',
              :current_locale => Globalize.locale %>
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description],
                :object => "breads/bread" -%>
  </div>

  <div class='field'>
    <%= f.label t('.available_days') -%>

    <%= f.select( :available_days, 
        options_for_select( [ 
          ["", ""], 
          [ t('.every_day'), :every_day ], 
          [ t('.not_every_day'), :not_every_day ], 
          [ t('.por_encargo'), :por_encargo ],
          [ t('.weekend'), :weekend ]
        ], @bread.available_days )) %>
  </div>

  <div class='field'>
    <%= f.label t('.price') -%>
    <%= f.number_field :price, :class => 'text_field', :step => 'any' -%>
  </div>

  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @bread.photo,
               :toggle_image_display => false -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.breads.admin.breads.bread'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @bread.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>

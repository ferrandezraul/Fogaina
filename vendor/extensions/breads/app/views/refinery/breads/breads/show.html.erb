<% content_for :body_content_title do %>
  <%= @bread.name %>
<% end %>

<% content_for :body do %>
  <section>
    <p>
      <%=raw @bread.description %>
    </p>
  </section>
  <% if @bread.price %>
    <section>
      <h4><%= t(".price") %></h4>
      <p>
        <%=raw @bread.price.to_s + " â‚¬"%>
      </p>
    </section>
  <% end %>
  <% if @bread.available_days and !@bread.available_days.empty? %>
    <section>
      <h4><%= t(".available_days") %></h4>
      <p>
        <%=raw t( "." + @bread.available_days.to_s ) %>
      </p>
    </section>
  <% end %>  
  
  <section>
    <p>
      <%= image_fu @bread.photo, nil %>
    </p>
  </section>
  
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="breads">
      <% @breads.each do |bread| %>
        <li>
          <%= link_to bread.name, refinery.breads_bread_path(bread) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>

<% content_for :body_content_title do %>
  <%= @bread.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1><%= t('.name') %></h1>
    <p>
      <%=raw @bread.name %>
    </p>
  </section>
  <section>
    <h1><%= t('.description') %></h1>
    <p>
      <%=raw @bread.description %>
    </p>
  </section>
  <section>
    <h1><%= t('.photo') %></h1>
    <p>
      <%= image_fu @bread.photo, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="breads">
      <% @breads.each do |bread| %>
        <li>
          <%= link_to bread.name, refinery.breads_bread_path(bread) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>

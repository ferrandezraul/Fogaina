<ul>
  <% if ::Refinery::Videos::Admin::VideosController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.videos_admin_videos_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_videos_admin_video_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Videos::Admin::VideosController.sortable? && ::Refinery::Videos::Video.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.videos_admin_videos_path,
                     t('.reorder', what:  "Videos"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.videos_admin_videos_path,
                      t('.reorder_done', what: "Videos"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>

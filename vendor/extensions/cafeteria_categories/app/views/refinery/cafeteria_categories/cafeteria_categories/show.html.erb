<% content_for :body_content_title do %>
  <%= @cafeteria_category.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @cafeteria_category.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @cafeteria_category.description %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @cafeteria_category.image, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="cafeteria_categories">
      <% @cafeteria_categories.each do |cafeteria_category| %>
        <li>
          <%= link_to cafeteria_category.title, refinery.cafeteria_categories_cafeteria_category_path(cafeteria_category) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>

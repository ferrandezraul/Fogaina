<div class='row'>

  <div class='show-for-medium-up medium-4 large-4 column'>
    <section id='side_body'>
      <div class="inner">  
        <aside>
          <h1 id="body_content_title"><%= @page.title %></h1>
          <ul id="breads">
            <% @cafeteria_categories.each do |cafeteria_category| %>
              <% if cafeteria_category.title %>
                <li>
                  <%= link_to cafeteria_category.title, refinery.cafeteria_categories_cafeteria_category_path(cafeteria_category) %>
                </li>
              <% end %>
            <% end %>
          </ul>
        </aside>
      </div>
    </section>
  </div>

  <div class='medium-8 large-8 column'>
    <section id='body'>
      <h2>
        <%= @cafeteria_category.title %>
      </h2>

      <section>
        <p>
          <%=raw @cafeteria_category.description %>
        </p>
      </section>

      <% if @cafeteria_category.image2 %>

        <ul class="clearing-thumbs" data-clearing>
          <li>
            <%= link_to( image_tag( @cafeteria_category.image.url, 
                                    :data => { 
                                       :caption => @cafeteria_category.title 
                                    }, :class => "th" ), @cafeteria_category.image.url )  %>
          </li>
          <% if @cafeteria_category.image2 %>
            <li>
              <%= link_to( image_tag( @cafeteria_category.image2.url, 
                                    :data => { 
                                       :caption => @cafeteria_category.title 
                                    }, :class => "th" ), @cafeteria_category.image2.url )  %>
            </li>
          <% end %>
          <% if @cafeteria_category.image3 %>
            <li>
              <%= link_to( image_tag( @cafeteria_category.image3.url, 
                                    :data => { 
                                       :caption => @cafeteria_category.title 
                                    }, :class => "th" ), @cafeteria_category.image3.url )  %>
            </li>
          <% end %>
        </ul>

      <% end %>
      
      <br><%= link_to t('.back'), refinery.cafeteria_categories_cafeteria_categories_path %>

    </section>

  </div>

</div>

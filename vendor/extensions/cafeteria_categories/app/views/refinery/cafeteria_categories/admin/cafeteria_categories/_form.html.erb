<%= form_for [refinery, :cafeteria_categories_admin, @cafeteria_category] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @cafeteria_category,
              :include_object_name => true %>

  <%= render '/refinery/admin/locale_picker',
              :current_locale => Globalize.locale %>
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description],
                :object => "cafeteria_categories/cafeteria_category" -%>
  </div>

  <div class='field'>
    <%= f.label :image -%>
    <strong> "Para que la vista sea corecta debes usar una imagen con el mismo numero de pixels que las fotos de las demas categorias"</strong>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image_id,
               :image => @cafeteria_category.image,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label "Foto 2" -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image2_id,
               :image => @cafeteria_category.image2,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label "Foto 3" -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image3_id,
               :image => @cafeteria_category.image3,
               :toggle_image_display => false -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.cafeteria_categories.admin.cafeteria_categories.cafeteria_category'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @cafeteria_category.title) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>

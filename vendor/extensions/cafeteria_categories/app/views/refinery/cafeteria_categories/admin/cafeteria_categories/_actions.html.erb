<ul>
  <% if ::Refinery::CafeteriaCategories::Admin::CafeteriaCategoriesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.cafeteria_categories_admin_cafeteria_categories_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_cafeteria_categories_admin_cafeteria_category_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::CafeteriaCategories::Admin::CafeteriaCategoriesController.sortable? && ::Refinery::CafeteriaCategories::CafeteriaCategory.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.cafeteria_categories_admin_cafeteria_categories_path,
                     t('.reorder', what:  "Cafeteria Categories"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.cafeteria_categories_admin_cafeteria_categories_path,
                      t('.reorder_done', what: "Cafeteria Categories"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
